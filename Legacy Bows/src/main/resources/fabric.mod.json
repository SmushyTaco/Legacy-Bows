{
  "schemaVersion": 1,
  "id": "legacy_bows",
  "version": "${version}",
  "name": "Legacy Bows",
  "description": "Bring back the old legacy machine gun bows! This mod also works for crossbows and both of them can be enabled and disabled in the config!",
  "authors": [
    "SmushyTaco"
  ],
  "contact": {
    "homepage": "https://www.smushytaco.com/",
    "issues": "https://www.curseforge.com/minecraft/mc-mods/legacy-bows/issues/",
    "sources": "https://github.com/SmushyTaco/Legacy-Bows/"
  },
  "license": "GNU Lesser General Public License version 3 (LGPLv3)",
  "icon": "assets/legacy_bows/icon.png",
  "environment": "*",
  "entrypoints": {
    "main": [
      {
        "adapter": "kotlin",
        "value": "com.smushytaco.legacy_bows.LegacyBows"
      }
    ],
    "modmenu": [
      "com.smushytaco.legacy_bows.configuration_support.ModMenuIntegration"
    ]
  },
  "mixins": [
    "legacy_bows.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=0.14.9",
    "fabric-api": "*",
    "fabric-language-kotlin": ">=1.8.2+kotlin.1.7.10",
    "minecraft": "~1.19",
    "cloth-config2": ">=8.0.75",
    "java": ">=17"
  },
  "suggests": {
    "modmenu": ">=4.0.6"
  }
}